# Staging Environment (environment/staging.env)
NODE_ENV=staging
LOG_LEVEL=info
PORT=8080

# User Service
USER_SERVICE_URL=http://user-service:3000
USER_SERVICE_TIMEOUT=4000

# Authentication Service
AUTH_SERVICE_URL=http://auth-service:4000
AUTH_SERVICE_TIMEOUT=3000

# Review Service
REVIEW_SERVICE_URL=http://review-service:5000
REVIEW_SERVICE_TIMEOUT=3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX_REQUESTS=50

# JWT
JWT_SECRET=your-staging-secret-key
JWT_EXPIRATION=1h

# Monitoring
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090
